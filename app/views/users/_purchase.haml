%li.show__item
  = link_to new_item_score_path(item), class: "show__item--box" do
    = fa_icon "angle-right", class: "angle"
    = image_tag item.item_photos.first.photo.to_s, class: "photo"
    .discription
      .discription__title
        %h3
          = item.name
      .discription__tag
        %label.discription__tag--progress
          取引中
